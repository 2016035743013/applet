/* pages/guide/guide.wxss */
page{
    background: rgb(248, 251, 252);
}
.topRect{
    background: rgb(90, 149, 255);
    width: 100%;
    height: 200rpx;
    position: absolute;
    display: flex;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 50rpx;
}
.swiper_area{
    position: absolute;
    display: flex;
    justify-content: center;
    top: 100rpx;
    width: 100%;
    height: 1010rpx;
}
.card{
    width: 90%;
    margin:0 5%; 
    background-color: white;
    height: 1000rpx;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
    box-shadow:0px 0px 10px 2px rgba(0, 0, 0, 0.11);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.item{
    width: 80%;
    margin-bottom: 40rpx;
}
.content{
    background-color: #f7f7f7;
    padding: 15rpx;
    margin-top: 20rpx;
}
.title{
    color: #8a8a8a;
    font-size: 35rpx;
}
.skip{
    margin: 30rpx auto;
    color: rgb(90, 149, 255);
    text-align: center;
}
.btn{
    background-color: rgb(90, 149, 255);
    color: white;
}
.target_area{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.target{
    width: 30%;
    border-radius: 5rpx;
    text-align: center;
    margin:20rpx 0;
    font-size: 30rpx;
    padding: 10rpx 0;
}
.picker{
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.date{
    margin-top: 20rpx;
}