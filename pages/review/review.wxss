page{
  background: rgb(248, 251, 252);
}
.circle{
  position: absolute;
  width: 100%;
  top: -890rpx;
  left: 0rpx;
}
.circle>view {
  width: 1200rpx;
  height: 1200rpx;
  margin-left: -30%;
  background: #5A95FF;
  border-radius: 50%;
}
.review {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}
.diaryAndTask {
  width: 100%;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.diaryAndTask>view {
  display: flex;
  justify-content: space-around;
  height: 80%;
  border: 2px solid white;
  box-sizing: border-box;
  border-radius: 5rpx;
}
.diaryAndTask>view>view { 
  padding: 10rpx 20rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.diaryAndTask>view>view.activeClass{
  background: white;
  color: #5A95FF;
}
.days{
  width: 100%;
  position: relative;
}
.days>swiper{
  height: 100rpx;
}
.daysContainer{
  width: 100%;
  display: flex;
  justify-content: space-around;
  height: 100%;
  flex-direction: row;
}

.day{
  width: 13%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  font-size: 30rpx;
  color: white;
}
.dayActive{
   background: white;
   color: #5A95FF;
}

.taskSwiper, .diarySwiper{
  width: 100%;
  height: 900rpx;
  border-radius: 20rpx;
  position: relative;
}


.taskSwiper .taskContainer, .diarySwiper .taskContainer{
  margin: 20rpx auto 0 auto;
  border-radius: 20rpx;
  background: white;
  width: 90%;
  height: 95%;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.11);
}

.title{
  width: 85%;
  height: 20%;
  color: #87AFFF;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 45rpx;
}
.content{
  width: 85%;
  color: #616161;
  height: 65%;
}
.content>scroll-view{
  width: 100%;
  height: 100%;
}

.addEdit{
  width: 100%;
  height: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.addEdit>view{
  height: 100rpx;
  width: 100rpx;
  border: 1px solid #5A95FF;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  
  /* top: 30rpx;
  left: 0rpx; */
  background: #5A95FF;
  box-shadow: 0 0 20px 1px rgba(90,149,255, 0.5);
}
.addEdit image{
  height: 50rpx;
  width: 50rpx;
}
.diarySwiper .taskContainer{
  padding: 40rpx;
  box-sizing: border-box;
}
.diarySwiper .taskContainer>scroll-view {
  width: 100%;
  height: 100%;
  word-break: break-all;
}
.timeItem{
  width: 100%;
  height: 150rpx;
  /* background: blue; */
  border-bottom: 1px solid #EBEBEB;
  position: relative;
}
.time{
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  color: rgba(0, 0, 0, 0.4);
  font-size: 30rpx;
}
.taskItem{
  width: 80%;
  height: 180rpx;
  background: pink;
  margin-bottom: 20rpx;
  position: absolute;
  left: 0rpx;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.taskTitle{
  width: 100%;
  font-size: 40rpx;
  color: white;
  height: 40%;
}
.taskContent{
  width: 100%;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.5);
  height: 100rpx;
}
